<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background"
    tools:context=".activity.DetailMahasiswaActivity">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_gravity="top"
                android:id="@+id/ivTextDrawable"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvLabelNbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spiner_base_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="NBI"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvNbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_label"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="-"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvLabelNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spiner_base_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="Nama"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_label"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="-"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvLabelAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spiner_base_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="Alamat"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_label"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="-"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvLabelTglLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spiner_base_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="Tgl Lahir"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvTglLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_label"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="-"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvLabelProdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spiner_base_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="Prodi"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvProdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_label"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="-"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvLabelJnsKelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spiner_base_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="Jenis Kelamin"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvJnsKelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_label"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="-"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvLabelAgama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spiner_base_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="Agama"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvAgama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_label"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="-"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvLabelHobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spiner_base_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="Hobi"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/tvHobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_label"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_medium"
                    tools:text="-"
                    android:singleLine="false" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>